{
  "name": "beena",
  "version": "1.2.0",
  "type": "module",
  "license": "MIT",
  "main": "src/index.ts",
  "bin": {
    "beena": "dist/index.mjs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Overding/Beena.git"
  },
  "scripts": {
    "postinstall": "npx playwright install chromium",
    "lint": "eslint ./src/",
    "start": "tsx src/index.ts",
    "dev": "npm run watch:report-template & pkgroll -w ",
    "build": "pkgroll && npm run copy:report-template",
    "copy:report-template": "mkdir -p dist && cp src/report-template.html dist/report-template.html",
    "watch:report-template": "chokidar 'src/report-template.html' -c \"yarn copy:report-template\" --initial"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@tsconfig/node22": "^22.0.2",
    "@types/node": "^24.1.0",
    "@types/pngjs": "^6.0.5",
    "chokidar-cli": "^3.0.0",
    "eslint": "^9.32.0",
    "pkgroll": "^2.14.5",
    "prettier": "^3.6.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0"
  },
  "dependencies": {
    "commander": "^14.0.0",
    "pixelmatch": "^7.1.0",
    "playwright": "^1.54.1",
    "pngjs": "^7.0.0"
  }
}